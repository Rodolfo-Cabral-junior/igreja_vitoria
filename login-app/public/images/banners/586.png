<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#FDB813;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="churchGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#8B4513;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#654321;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="sunGradient">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:0.8" />
    </radialGradient>
  </defs>
  
  <!-- Sky background -->
  <rect width="1920" height="1080" fill="url(#skyGradient)"/>
  
  <!-- Sun -->
  <circle cx="1600" cy="200" r="80" fill="url(#sunGradient)" opacity="0.9"/>
  
  <!-- Clouds -->
  <ellipse cx="300" cy="150" rx="100" ry="40" fill="white" opacity="0.7"/>
  <ellipse cx="350" cy="140" rx="80" ry="35" fill="white" opacity="0.7"/>
  <ellipse cx="250" cy="140" rx="60" ry="30" fill="white" opacity="0.7"/>
  
  <ellipse cx="800" cy="100" rx="120" ry="45" fill="white" opacity="0.6"/>
  <ellipse cx="860" cy="90" rx="90" ry="40" fill="white" opacity="0.6"/>
  
  <!-- Mountains background -->
  <polygon points="0,600 400,300 800,500 1200,350 1600,450 1920,400 1920,1080 0,1080" 
           fill="#4A5568" opacity="0.3"/>
  
  <!-- Church building -->
  <g transform="translate(700, 400)">
    <!-- Main building -->
    <rect x="0" y="200" width="200" height="300" fill="url(#churchGradient)"/>
    
    <!-- Roof -->
    <polygon points="-20,200 100,50 220,200" fill="#8B0000"/>
    
    <!-- Tower -->
    <rect x="80" y="100" width="40" height="150" fill="url(#churchGradient)"/>
    <polygon points="70,100 100,30 130,100" fill="#8B0000"/>
    
    <!-- Cross -->
    <rect x="95" y="20" width="10" height="40" fill="#FFD700"/>
    <rect x="85" y="30" width="30" height="8" fill="#FFD700"/>
    
    <!-- Windows -->
    <rect x="20" y="250" width="40" height="50" fill="#87CEEB" stroke="#654321" stroke-width="3"/>
    <rect x="140" y="250" width="40" height="50" fill="#87CEEB" stroke="#654321" stroke-width="3"/>
    <rect x="85" y="130" width="30" height="40" fill="#87CEEB" stroke="#654321" stroke-width="3"/>
    
    <!-- Door -->
    <rect x="75" y="380" width="50" height="120" fill="#654321"/>
    <circle cx="115" cy="440" r="3" fill="#FFD700"/>
  </g>
  
  <!-- Ground -->
  <rect x="0" y="700" width="1920" height="380" fill="#228B22" opacity="0.8"/>
  
  <!-- Trees -->
  <g transform="translate(200, 600)">
    <rect x="-10" y="50" width="20" height="60" fill="#8B4513"/>
    <circle cx="0" cy="30" r="40" fill="#228B22"/>
    <circle cx="-20" cy="40" r="30" fill="#228B22"/>
    <circle cx="20" cy="40" r="30" fill="#228B22"/>
  </g>
  
  <g transform="translate(1200, 650)">
    <rect x="-15" y="70" width="30" height="80" fill="#8B4513"/>
    <circle cx="0" cy="40" r="50" fill="#228B22"/>
    <circle cx="-30" cy="50" r="40" fill="#228B22"/>
    <circle cx="30" cy="50" r="40" fill="#228B22"/>
  </g>
  
  <!-- Birds -->
  <path d="M100,80 Q110,70 120,80" stroke="#333" stroke-width="2" fill="none"/>
  <path d="M130,90 Q140,80 150,90" stroke="#333" stroke-width="2" fill="none"/>
  <path d="M500,60 Q510,50 520,60" stroke="#333" stroke-width="2" fill="none"/>
  
  <!-- Light rays -->
  <g opacity="0.3">
    <line x1="1600" y1="200" x2="1400" y2="400" stroke="#FFD700" stroke-width="3"/>
    <line x1="1600" y1="200" x2="1500" y2="450" stroke="#FFD700" stroke-width="3"/>
    <line x1="1600" y1="200" x2="1700" y2="400" stroke="#FFD700" stroke-width="3"/>
    <line x1="1600" y1="200" x2="1650" y2="450" stroke="#FFD700" stroke-width="3"/>
  </g>
</svg>
